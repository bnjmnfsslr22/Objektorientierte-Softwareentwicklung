   <children>
      <ListView fx:id="myListView" prefHeight="200.0" prefWidth="200.0">
         <contextMenu>
            <ContextMenu>
              <items>
                <MenuItem fx:id="choose" mnemonicParsing="false" onAction="#auswaehlen" text="Auswählen" />
                  <MenuItem fx:id="delete" mnemonicParsing="false" onAction="#loeschen" text="Löschen" />
              </items>
            </ContextMenu>
         </contextMenu></ListView>
      <Button fx:id="buttonacc" layoutX="53.0" layoutY="160.0" mnemonicParsing="false" onAction="#newAcc" text="neuer Account" />
   </children>
</AnchorPane>
